<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_background"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/financial_report_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/city_center_apartment"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/financial_report_color"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/financial_report_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profit"
            android:layout_margin="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/financial_report_reservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reservation_count"
            android:layout_margin="5dp"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>